<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="load"
                    android:id="@+id/topLoadBtn"
                    android:layout_centerHorizontal="true"/>
                <com.mobfox.sdk.bannerads.Banner
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:id="@+id/aboveTheFold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/topLoadBtn">
                </com.mobfox.sdk.bannerads.Banner>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/topColor"
                    android:layout_below="@id/aboveTheFold"
                    android:background="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:id="@+id/bottomColor"
                    android:layout_below="@id/topColor"
                    android:background="@color/common_google_signin_btn_text_light_focused"/>
                <com.mobfox.sdk.bannerads.Banner
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:id="@+id/belowTheFold"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/bottomColor">
                </com.mobfox.sdk.bannerads.Banner>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="load"
                    android:id="@+id/bottomLoadBtn"
                    android:layout_below="@id/belowTheFold"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
    </ScrollView>
    <!--header-->
    <com.mobfox.sdk.bannerads.Banner
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    </com.mobfox.sdk.bannerads.Banner>
    <!--header-->
    <!--header-->
    <com.mobfox.sdk.bannerads.Banner
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.mobfox.sdk.bannerads.Banner>
    <!--header-->
</RelativeLayout>